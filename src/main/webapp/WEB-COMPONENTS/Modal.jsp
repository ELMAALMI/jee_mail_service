<div id="inbox-mail" class="modal">

  <!-- Modal content -->
  <div class="modal-content-c">
    <div class="modal-header-c">
      <span  id="close" class="close">&times;</span>
      <h2>Mail Details</h2>
    </div>
    <div class="modal-body-c d-flex align-items-center align-items-center">
      <form style="width: 640px;padding: 30px;">
        <div class="form-group">
          <label id="to_span" class="col-lg-2 control-label">To</label>
          <div class="col-lg-12">
            <input type="text" name="to" placeholder="" id="to" class="form-control">
          </div>
        </div>
        <div class="form-group">
          <label class="col-lg-2 control-label">Subject</label>
          <div class="col-lg-12">
            <input type="text" name="subject" placeholder="" id="subject" class="form-control">
          </div>
        </div>
        <div class="form-group">
          <label class="col-lg-2 control-label">Message</label>
          <div class="col-lg-12">
            <textarea rows="10" cols="30" class="form-control" id="message" name="message"></textarea>
          </div>
        </div>
      </form>
    </div>
    <div class="modal-footer">
    </div>
  </div>
</div>
